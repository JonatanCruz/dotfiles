# ~/.config/yazi/yazi.toml (Configuración general)

# --- Comportamiento del Gestor ---
[manager]
show_hidden = true  # Mostrar archivos y carpetas ocultos por defecto
sort_by = "alphabetical"
sort_dir_first = true

# --- Abridor de archivos ---
[opener]
# Abre cualquier archivo de texto con Neovim
text = [
    { run = 'nvim "$@"', block = true },
]
# Regla por defecto para cualquier otro tipo de archivo
# Puedes añadir más reglas aquí para imágenes, videos, etc.
default = [
    { run = 'xdg-open "$@"', orphan = true },
]
