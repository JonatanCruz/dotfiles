# ============================================================================
# CONFIGURACIÓN DE GIT
# ============================================================================
# Configuración optimizada para desarrollo con git-delta integrado

[user]
	name = Jonatan Tlilayatzi Cruz
	email = tlilayatzi.jonatan@outlook.com

[init]
	defaultBranch = main

[core]
	editor = nvim
	pager = delta
	# Ignorar cambios de permisos
	filemode = false
	# Mejor compresión
	compression = 9

[interactive]
	diffFilter = delta --color-only

[add.interactive]
	useBuiltin = false

# ============================================================================
# DELTA (Diff Viewer Mejorado)
# ============================================================================

[delta]
	# Usar syntax highlighting
	features = dracula
	navigate = true
	light = false
	side-by-side = true
	line-numbers = true

	# Colores personalizados
	syntax-theme = Dracula

	# Ancho de línea
	max-line-length = 512

	# Mostrar cambios intra-línea
	hyperlinks = true

	# File headers
	file-style = bold "#ffb86c"
	file-decoration-style = "#ffb86c" ul

	# Line numbers
	line-numbers-left-format = "{nm:>4}┊"
	line-numbers-right-format = "{np:>4}│"
	line-numbers-left-style = "#6272a4"
	line-numbers-right-style = "#6272a4"

	# Hunks
	hunk-header-style = file line-number syntax
	hunk-header-decoration-style = "#bd93f9" box

[delta "dracula"]
	# Colores base de Dracula
	minus-style = syntax "#3e2a2a"
	minus-emph-style = syntax "#6a3a3a"
	plus-style = syntax "#2a3e2a"
	plus-emph-style = syntax "#3a6a3a"
	map-styles = "bold purple => syntax #bd93f9, bold cyan => syntax #8be9fd"

	# Colores Dracula
	# Background: #282a36
	# Current Line: #44475a
	# Foreground: #f8f8f2
	# Comment: #6272a4
	# Cyan: #8be9fd
	# Green: #50fa7b
	# Orange: #ffb86c
	# Pink: #ff79c6
	# Purple: #bd93f9
	# Red: #ff5555
	# Yellow: #f1fa8c

# ============================================================================
# MERGE Y DIFF
# ============================================================================

[merge]
	tool = nvimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false
	keepBackup = false

[mergetool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[diff]
	tool = nvimdiff
	colorMoved = default

[difftool]
	prompt = false

[difftool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE

# ============================================================================
# PULL Y PUSH
# ============================================================================

[pull]
	rebase = false
	ff = only

[push]
	default = current
	followTags = true
	autoSetupRemote = true

[fetch]
	prune = true
	pruneTagas = true

# ============================================================================
# ALIASES ÚTILES
# ============================================================================

[alias]
	# Status
	s = status -sb
	st = status

	# Add
	a = add
	aa = add --all
	ap = add --patch

	# Commit
	c = commit
	cm = commit -m
	ca = commit --amend
	can = commit --amend --no-edit

	# Branch
	b = branch
	ba = branch -a
	bd = branch -d
	bD = branch -D

	# Checkout
	co = checkout
	cob = checkout -b

	# Log
	l = log --oneline --graph --decorate
	lg = log --oneline --graph --decorate --all
	lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	last = log -1 HEAD --stat

	# Diff
	d = diff
	ds = diff --staged
	dw = diff --word-diff

	# Stash
	sl = stash list
	ss = stash save
	sp = stash pop
	sa = stash apply

	# Reset
	unstage = reset HEAD --
	undo = reset --soft HEAD^

	# Remote
	r = remote -v

	# Push/Pull
	p = push
	pl = pull
	pf = push --force-with-lease

	# Otros
	tags = tag -l
	branches = branch -a
	remotes = remote -v

	# Limpieza
	cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d"

	# Visualización mejorada
	tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all

	# Contribuidores
	contributors = shortlog -sn

# ============================================================================
# COLORES
# ============================================================================

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

# ============================================================================
# GITHUB CLI
# ============================================================================

[credential]
	helper = osxkeychain

# ============================================================================
# OPTIMIZACIONES
# ============================================================================

[rerere]
	enabled = true

[help]
	autocorrect = 1

[protocol]
	version = 2
